<html>
  <head>
    <title>Bi Solutions</title>
    <link href="css/c3.min.css" rel="stylesheet" type="text/css">
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="js/d3.min.js" charset="utf-8"></script><!-- http://d3js.org/d3.v3.min.js -->
    <script src="js/c3.js"></script>
    <script>
      $(function(){
        var chart = c3.generate({
          bindto: '#chart',
          data: {
              columns: [['Fluxo', 0]],
              type: 'gauge',
              onclick: function (d, i) { console.log("onclick", d, i); }
          },
          gauge: {
            min: 0, 
            max: 1000,
            width: 39 
          },
          color: {
              pattern: ['#FF0000', '#F97600', '#F6C600', '#60B044'], 
              threshold: {values: [30, 60, 90, 100]}
          },
          size: {height: 180}
        });
        chart.load({
          columns: [['Fluxo', <%=fluxo%>]]
        });
      });
    </script>    
  </head>
  <body>
    
    <div id="chart"></div>
    
  </body>
</html>